<UserControl x:Class="TestTaskKGR.Desktop.UserControls.Views.LogConsole"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestTaskKGR.Desktop.UserControls.Views"
             mc:Ignorable="d" 
             d:DesignHeight="260" d:DesignWidth="650">
    <GroupBox Header="Консоль логов" HorizontalAlignment="Center" Height="250" VerticalAlignment="Center" Width="640" Margin="10,10,10,10">
        <ScrollViewer>
            <TextBlock Text="{Binding LogMessage}" Margin="5"/>
        </ScrollViewer>
    </GroupBox>
</UserControl>