<UserControl x:Class="TestTaskKGR.Desktop.UserControls.Views.LogConsole"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodel="clr-namespace:TestTaskKGR.Desktop" d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="210" d:DesignWidth="650">
    <GroupBox Header="Консоль логов" HorizontalAlignment="Center" Height="200" VerticalAlignment="Center" Width="640" Margin="10,0,10,0">
        <ScrollViewer>
            <TextBlock Text="{Binding LogConsole.LogMessage}" Margin="5"/>
        </ScrollViewer>
    </GroupBox>
</UserControl>