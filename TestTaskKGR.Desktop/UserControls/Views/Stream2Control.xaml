<UserControl x:Class="TestTaskKGR.Desktop.UserControls.Views.Stream2Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodel="clr-namespace:TestTaskKGR.Desktop" d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="85" d:DesignWidth="650">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Style/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <GroupBox Header="Управление стримом 2" HorizontalAlignment="Center" Height="75" VerticalAlignment="Top" Width="640"  Margin="10,0,10,0">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="URL" VerticalAlignment="Center"/>
            <TextBox VerticalContentAlignment="Center" Text="{Binding Stream2Control.Url, UpdateSourceTrigger=PropertyChanged}" Width="300" Height="20"/>
            <Button Content="Старт" Command="{Binding Stream2Control.StartStreamCommand.}" />
            <Button Content="Стоп" Command="{Binding Stream2Control.StopStreamCommand}" />
        </StackPanel>
    </GroupBox>
</UserControl>
