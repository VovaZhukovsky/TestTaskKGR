<UserControl x:Class="TestTaskKGR.Desktop.UserControls.Views.StreamsDetection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestTaskKGR.Desktop.Implementations"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:viewmodel="clr-namespace:TestTaskKGR.Desktop" d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="210" d:DesignWidth="650">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Style/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <GroupBox Header="Настройки обнаружения" HorizontalAlignment="Center" Height="200" VerticalAlignment="Center" Width="640" Margin="10,0,10,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,10,10,10">
                <Slider x:Name="ConfidenceTreshold">
                    <i:Interaction.Behaviors>
                        <local:ConfidentTrasholdSliderBehavior Command="{Binding ConfidentTrasholdCommand.Change}"/>
                    </i:Interaction.Behaviors>
                </Slider>
                
                <TextBlock VerticalAlignment="Center"
                           Text="{Binding Value, ElementName=ConfidenceTreshold, StringFormat=\{0:F2\}}" />
                
                <CheckBox x:Name="EnableTracking"
                      Content="Track Objects"
                      Command="{Binding TrackingHandlerCommand.Track}" 
                      CommandParameter="{Binding ElementName=EnableTracking}"/>

                <CheckBox x:Name="EnableFiltering"
                      Content="Enable Filtering ('persons' only)"
                      Command="{Binding FilterHandlerCommand.Filter}" 
                      CommandParameter="{Binding ElementName=EnableFiltering}"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  Grid.Row="1" Margin="10,10,10,10">
                <Button x:Name="Start"
                    Content="Start Detection" 
                    Command="{Binding DetectionHandlerCommand.Detection}" 
                    CommandParameter="true"/>

                <Button x:Name="Stop"
                    Content="Stop Detection" 
                    Command="{Binding DetectionHandlerCommand.Detection}" 
                    CommandParameter="false"/>
            </StackPanel>
        </Grid>
    </GroupBox>
</UserControl>
