<Window x:Class="TestTaskKGR.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:TestTaskKGR.Desktop"
        xmlns:views="clr-namespace:TestTaskKGR.Desktop.UserControls.Views"
        mc:Ignorable="d"
        Title="Stream Detection" Height="800" Width="1400">
	<Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Top" Margin="5">
            <views:Stream1 x:Name="Stream1View" DataContext="{Binding Stream1}"/>
            <views:LogConsole x:Name="LogConsoleControl" DataContext="{Binding LogConsole}"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Top" Margin="5">
            <views:Stream2 x:Name="Stream2View" DataContext="{Binding Stream2}"/>
            <views:StreamControl x:Name="StreamControl" DataContext="{Binding StreamControl}"/>
        </StackPanel>
    </Grid>
</Window>